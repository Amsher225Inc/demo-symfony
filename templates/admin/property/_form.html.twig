{{ form_start(form) }}
<div class="row">
    <div class="col-4">{{ form_row(form.title) }}</div>
    <div class="col-4">{{ form_row(form.surface) }}</div>
    <div class="col-4">{{ form_row(form.price) }}</div>
</div>
<div class="row">
    <div class="col-3">{{ form_row(form.room) }}</div>
    <div class="col-3">{{ form_row(form.betroom) }}</div>
    <div class="col-3">{{ form_row(form.floor) }}</div>
    <div class="col-3">{{ form_row(form.heat) }}</div>
</div>
<div class="row">
    <div class="col-4">{{ form_row(form.city) }}</div>
    <div class="col-4">{{ form_row(form.adresse) }}</div>
