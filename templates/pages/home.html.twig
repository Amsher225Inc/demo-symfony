{% extends 'base.html.twig' %}

{% block body %}
    <div class="jumbotron text-center">
        <div class="container mt-4">
            <h1>Mino Immobilier</h1>
            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aliquam animi assumenda atque deleniti eligendi enim est hic itaque laboriosam libero nemo nesciunt omnis optio praesentium, quas quasi quod repudiandae sit.</p>
        </div>
    </div>

    <div class="container">
        <div class="row flex">
            {% for property in properties %}
                <div class="col-3">
                    <div class="card">
                        <div class="card-body">
                            <h2 class="card-title"><a href="{{ path('property.show', {'slug': property.slug, 'id': property.id}) }}">{{ property.title }}</a></h2>
                            <p>{{ property.city }} ({{ property.adresse }})</p>
                            <div class="text-primary">{{ property.price | number_format(0, '', ' ') }} FCA</div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}